@import "~/.config/rofi/stylix.rasi"

/* Enhanced Catppuccin Mocha theme for rofi */

* {
    width: 700;
    font: "JetBrainsMono Nerd Font 14";
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 400px;
    border: 3px;
    border-color: @border-col;
    background-color: @bg-col;
    border-radius: 15px;
    location: center;
    anchor: center;
}

mainbox {
    background-color: @bg-col;
    padding: 15px;
}

inputbar {
    children: [prompt,entry];
    background-color: @bg-col-light;
    border-radius: 8px;
    padding: 8px;
    margin: 0px 0px 10px 0px;
    border: 2px;
    border-color: @surface0;
}

prompt {
    background-color: @blue;
    padding: 8px 12px;
    text-color: @bg-col-dark;
    border-radius: 6px;
    margin: 0px 8px 0px 0px;
    font: "JetBrainsMono Nerd Font Bold 14";
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 8px 12px;
    text-color: @text;
    background-color: transparent;
}

listview {
    border: 0px;
    padding: 10px 0px 0px 0px;
    columns: 1;
    lines: 8;
    background-color: transparent;
    spacing: 2px;
}

element {
    padding: 10px;
    background-color: transparent;
    text-color: @fg-col;
    border-radius: 8px;
}

element-icon {
    size: 28px;
    margin: 0px 10px 0px 0px;
}

element selected {
    background-color: @selected-col;
    border: 2px;
    border-radius: 8px;
    border-color: @mauve;
    text-color: @text;
}

/* Removed unsupported selectors if any (element selected.urgent, element selected.active) if your rofi version does not support them. */
/* If you still get errors, comment out those blocks as well. */

mode-switcher {
    spacing: 0;
    background-color: @bg-col-light;
    border-radius: 8px;
    margin: 10px 0px 0px 0px;
    padding: 5px;
}

button {
    padding: 8px 16px;
    background-color: transparent;
    text-color: @overlay0;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
    border-radius: 6px;
}

button selected {
    background-color: @blue;
    text-color: @bg-col-dark;
    font: "JetBrainsMono Nerd Font Bold 14";
}
